@using PRCR.Models;
@using System.Configuration
@model List<DocumentsAttachmentModel>
 
<table id="tblDocument" class="table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th style="width:20%;">Document Type</th>
            <th style="width:70%;">Document Name</th>
            <th style="width:10%;text-align:center;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:20%;">@item.DocumentType</td>
                <td style="width:70%;">@item.DocumentName</td>
                <td style="width:10%;text-align:center;"><a href="@string.Concat(ConfigurationManager.AppSettings["DownloadPath"].ToString(),item.DocumentPath)" title="Download" target="_blank" download><i class="fa fa-download"></i></a></td>
                @*<a href="@string.Concat("\\PRCR",item.DocumentPath)" title="Download" download><i class="fa fa-pencil"></i></a>*@
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#tblDocument').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': false,
            'info': true, 
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>