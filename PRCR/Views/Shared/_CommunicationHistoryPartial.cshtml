@using PRCR.Models;
@model List<CommunicationModel>

<div class="row">
    <div class="col-md-12">
        <!-- The time line -->
        @{
            string RemarkDate = string.Empty;
        }
        <ul class="timeline">
            @foreach (var item in Model.OrderByDescending(x => x.RemarkDate).ToList())
            {
                if (RemarkDate != item.RemarkDate.ToString("dd-MMM-yyyy"))
                {
                    RemarkDate = item.RemarkDate.ToString("dd-MMM-yyyy");
           
                <!-- timeline time label -->
                <li class="time-label">
                    <span class="bg-red">@RemarkDate
                    </span>
                </li>
                }

                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-envelope bg-blue"></i>

                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>&nbsp;@item.RemarkTime.ToString("hh:mm tt")</span>

                        <h3 class="timeline-header">@item.RemarkEmpCode - @item.RemarkEmpName</h3>

                        <div class="timeline-body" style="background-color: aliceblue;">
                          @Html.Raw(item.Remark)
                        </div>
                        <div class="timeline-footer">
                            @if (item.DocumentsAttachment.DocumentId > 0)
                            {
                                string filepath = System.Configuration.ConfigurationManager.AppSettings["filePath"].ToString() + item.DocumentsAttachment.DocumentPath;
                                <a class="btn btn-primary btn-xs" href="@filepath">
                                    <i class="fa fa-Document"></i>
                                </a>
                            }
                        </div>
                    </div>
                </li>
                
            }
            <!-- END timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
        </ul>
    </div>
</div>



